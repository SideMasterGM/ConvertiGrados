<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FarenToCelAndCelToFaren"
    android:background="#000"
    android:clickable="false"
    android:touchscreenBlocksFocus="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label_convertir"
        android:text="Convertir: "
        android:textSize="25dp"
        android:textColor="#fff"
        />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="165px"
        android:layout_below="@+id/label_convertir"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CelToFaren"
            android:layout_marginTop="10px"
            android:text="De Celcius a Farenheit"
            android:textSize="22dp"
            android:textColor="#fff"
            android:checked="true"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FarenToCel"
            android:layout_marginTop="5px"
            android:text="De Farenheit a Celcius"
            android:textSize="22dp"
            android:textColor="#fff"
            />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label_cantidad"
        android:text="Cantidad a convertir "
        android:textSize="25dp"
        android:textColor="#fff"
        android:layout_marginTop="112dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextBox_Cantidad"
        android:hint="Esperando cantidad..."
        android:layout_marginTop="150dp"
        android:textColor="#fff"
        android:inputType="number"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label_resultado"
        android:text="22.0 grados Celcius son 71.6 grados Farenheit"
        android:layout_marginTop="190dp"
        android:textSize="21dp"
        android:textColor="#fff"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button_Convertir"
        android:text="Convertir"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/label_resultado"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_firma"
        android:text="Firma: Side Master"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>